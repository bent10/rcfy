{
  "name": "rcfy",
  "description": "Finds and loads runtime-configuration file for the current project with precedence",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/rcfy.git",
  "license": "MIT",
  "keywords": [
    "rc",
    "runtime",
    "config",
    "configuration",
    "control",
    "run",
    "command",
    "fs",
    "load",
    "loader"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run types && vite build --emptyOutDir=false --watch",
    "build": "vite build && npm run types",
    "test": "vitest --ui",
    "coverage": "vitest run --coverage",
    "types": "tsc src/*.ts -d --emitDeclarationOnly --outDir ./dist",
    "lint": "tsc --noEmit && eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "loadee": "^2.1.6"
  },
  "devDependencies": {
    "doogu": "^3.2.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./node_modules/doogu/eslint"
  },
  "prettier": "doogu/prettier.json",
  "release": {
    "extends": "doogu/release.config.js"
  }
}
