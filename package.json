{
  "name": "rcfy",
  "description": "Finds and loads runtime-configuration file for the current project with precedence",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/rcfy.git",
  "license": "MIT",
  "keywords": [
    "rc",
    "runtime",
    "config",
    "configuration",
    "control",
    "run",
    "command",
    "fs",
    "load",
    "loader"
  ],
  "engines": {
    "node": "^12.22 || ^14.17 || >=16"
  },
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "chokidar \"src/*.ts\" -c \"npm run build\"",
    "lint": "tsc --noEmit && eslint \"./src\" --ext \".ts\" --cache --cache-location \"node_modules/.cache/.eslintcache\"",
    "build": "swc \"./src\" -d \"dist\" && tsc -d --emitDeclarationOnly",
    "test": "ava --verbose",
    "coverage": "c8 -r lcov -r text npm test"
  },
  "dependencies": {
    "loadee": "^2.1.4"
  },
  "devDependencies": {
    "doogu": "^2.2.8"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./node_modules/doogu/config/eslint.json"
  },
  "prettier": "doogu/config/prettier.json",
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "ignoredByWatcher": [
      "{coverage,dist}/**"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  },
  "foo": {
    "bar": "bar",
    "corge": {
      "xyz": 123
    }
  }
}
